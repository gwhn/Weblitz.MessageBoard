<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Weblitz.MessageBoard.Core"
                   namespace="Weblitz.MessageBoard.Core.Domain.Model">
  <joined-subclass name="Topic" extends="Entry">
    <key column="Id"/>
    <property name="Title"/>
    <property name="Sticky"/>
    <property name="Closed"/>
    <many-to-one name="Forum" column="ForumId" not-null="true"/>
    <set name="Posts" inverse="true" lazy="true" cascade="all-delete-orphan">
      <key column="TopicId"/>
      <one-to-many class="Post"/>
    </set>
  </joined-subclass>
</hibernate-mapping>